<merge
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<LinearLayout
    android:id="@+id/stContainer"
    style="@style/stfContainer"
    android:visibility="gone"
    tools:visibility="visible"
    >

    <ImageView
        android:id="@+id/stImage"
        style="@style/stfImage"
        android:layout_width="130dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/stf_ic_error" />

    <TextView
        android:id="@+id/stTitle"
        style="@style/stfMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/stMessage"
        style="@style/stfMessage"
        android:text="@string/stfErrorMessage"
        android:textAlignment="center"
        android:textColor="#FF8E8E93"
        android:textSize="14dp" />

    <ProgressBar
        android:id="@+id/stProgress"
        style="@style/stfProgress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/stButton"
        style="@style/stfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stf_round_button"
        android:text="@string/stfButtonText"
        android:textColor="@android:color/white" />

</LinearLayout>

</merge>